<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="#eeeeee"
              android:orientation="vertical"
              android:layout_width="300dp"
              android:layout_height="wrap_content">

    <!-- 타이틀바 -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <TextView
                android:id="@+id/adingtext"
                android:text="장바구니에 재료 추가하기"
                android:textSize="16sp"
                android:textColor="#fff"
                android:gravity="center"
                android:background="#FFB2B2"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
    </LinearLayout>
    <TextView
            android:id="@+id/iName" android:layout_gravity="center"
            android:text="재료이름" android:textSize="18dp"
            android:textStyle="bold" android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content" android:layout_height="0dp"/>
    <View
            android:background="#66bdbdbd"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    <!-- 닫기 버튼 -->
    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <Button
                android:text="예"
                android:textSize="15sp"
                android:textColor="#FFB2B2"
                android:padding="16dp"
                android:gravity="center"
                android:background="#00000000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="53dp"
                android:id="@+id/yesBtn"/>
        <Button
                android:text="아니오"
                android:textSize="15sp"
                android:textColor="#FFB2B2"
                android:padding="16dp"
                android:gravity="center"
                android:background="#00000000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="53dp"
                android:id="@+id/noBtn"/>
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>


