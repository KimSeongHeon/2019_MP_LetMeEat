<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" app:cardCornerRadius="5dp"
        app:cardElevation="5dp" android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:background="@color/colorPrimary" android:layout_marginRight="3dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_gravity="center"
        >
        <TextView
                android:layout_width="wrap_content" android:text="재료"
                android:layout_height="wrap_content" android:id="@+id/add_ingr"
                android:layout_centerInParent="true" android:textSize="14dp"
                android:textColor="@android:color/black"/>
        <ImageButton
                android:layout_width="28dp"
                android:layout_height="28dp" android:scaleType="fitXY"
                android:id="@+id/add_Shoppinglist" android:layout_alignParentRight="true"
                android:background="#00000000" android:backgroundTint="#00000000"
                android:layout_marginRight="5dp"
        />
    </RelativeLayout>
</android.support.v7.widget.CardView>