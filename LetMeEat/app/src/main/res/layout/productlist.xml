<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" app:cardCornerRadius="25dp"
        app:cardElevation="15dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="5dp" android:layout_marginLeft="5dp">
        <ImageView
                android:id="@+id/plisticon"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="name"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/product_kind"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="kind" android:gravity="center_horizontal"
                />
        <TextView
                android:id="@+id/product_era"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="era" android:gravity="center_horizontal"
                android:layout_marginBottom="5dp"/>

    </LinearLayout>
</android.support.v7.widget.CardView>



