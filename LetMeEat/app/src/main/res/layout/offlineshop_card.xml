<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content" app:cardCornerRadius="5dp"
        app:cardElevation="5dp" android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:background="@color/colorPrimary">
    <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <CheckBox
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="wrap_content" android:id="@+id/c_ingre"
                android:gravity="center"  android:buttonTint="#FFEB61"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="4" android:id="@+id/c_text"/>

    </LinearLayout>


</android.support.v7.widget.CardView>